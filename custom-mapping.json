{
    "strict": {
        "text-font-family": "Montserrat",
        "text-heading-1-font-family": "Montserrat-ExtraBold",
        "text-heading-2-font-family": "Montserrat-ExtraBold",
        "text-heading-3-font-family": "Montserrat-ExtraBold",
        "text-heading-4-font-family": "Montserrat-ExtraBold",
        "text-heading-5-font-family": "Montserrat-ExtraBold",
        "text-heading-6-font-family": "Montserrat-ExtraBold",
        "text-subtitle-1-font-family": "Montserrat-SemiBold",
        "text-subtitle-2-font-family": "Montserrat-SemiBold",
        "text-paragraph-1-font-family": "Montserrat-Regular",
        "text-paragraph-2-font-family": "Montserrat-Regular",
        "text-caption-1-font-family": "Montserrat-Regular",
        "text-caption-2-font-family": "Montserrat-SemiBold",
        "text-label-font-family": "Montserrat-ExtraBold"
    },
    "components": {
        "Button": {
            "appearances": {
                "filled": {
                    "variantGroups": {
                        "size": {
                            "medium": {
                                "paddingHorizontal": 5,
                                "paddingVertical": 5
                            }
                        }
                    }
                },
                "ghost": {
                    "mapping": {},
                    "variantGroups": {
                        "status": {
                            "primary": {
                                "borderColor": "transparent",
                                "backgroundColor": "color-basic-transparent-200",
                                "textColor": "text-primary-color",
                                "iconTintColor": "text-primary-color",
                                "state": {
                                    "focused": {
                                        "borderColor": "color-basic-transparent-500",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "hover": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-200",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "active": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "disabled": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-disabled-color",
                                        "iconTintColor": "text-disabled-color"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "Calendar": {
            "appearances": {
                "default": {
                    "mapping": {
                        "width": "100%",
                        "borderWidth": 0,
                        "borderColor": "background: rgba(0, 0, 0, 0)",
                        "titleFontWeight": "400",
                        "weekdayTextFontWeight": "400",
                        "headerPaddingHorizontal": 0,
                        "headerPaddingVertical": 15,
                        "paddingVertical": 0,
                        "rowMarginHorizontal": 0
                    }
                }
            }
        },
        "CalendarCell": {
            "appearances": {
                "default": {
                    "mapping": {
                        "contentTextFontWeight": "400",
                        "state": {
                            "selected": {
                                "contentBorderColor": "color-success-500",
                                "contentBackgroundColor": "color-success-200",
                                "contentTextColor": "text-primary-color"
                            },
                            "today": {
                                "contentBorderColor": "color-success-500",
                                "contentBackgroundColor": "color-success-200",
                                "contentTextColor": "text-primary-color"
                            },
                            "range": {
                                "backgroundColor": "color-warning-500",
                                "contentTextColor": "color-secondary-500"
                            },
                            "today.range": {
                                "contentBorderColor": "color-success-500",
                                "contentBackgroundColor": "color-success-200",
                                "contentTextColor": "color-secondary-500"
                            }
                        }
                    }
                }
            }
        }
    }
}
