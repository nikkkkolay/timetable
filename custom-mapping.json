{
    "strict": {
        "text-font-family": "System"
    },
    "components": {
        "Calendar": {
            "appearances": {
                "default": {
                    "mapping": {
                        "width": "100%",
                        "borderColor": "background: rgba(0,0,0, 0)",
                        "headerPaddingHorizontal": 0,
                        "headerPaddingVertical": 5,
                        "paddingVertical": 0,
                        "rowMarginHorizontal": 0
                    }
                }
            }
        },
        "CalendarCell": {
            "appearances": {
                "default": {
                    "mapping": {
                        "state": {
                            "selected": {
                                "contentBorderColor": "#008CFA",
                                "contentBackgroundColor": "background: rgba(0,140,250, 0.20)",
                                "contentTextColor": "#000"
                            },
                            "today": {
                                "contentBorderColor": "#008CFA",
                                "contentBackgroundColor": "background: rgba(0,140,250, 0.20)",
                                "contentTextColor": "#000"
                            },
                            "range": {
                                "backgroundColor": "rgba(249, 66, 58, 0.20)",
                                "contentTextColor": "#000"
                            },
                            "today.range": {
                                "contentBorderColor": "#008CFA",
                                "contentBackgroundColor": "background: rgba(0,140,250, 0.20)",
                                "contentTextColor": "#000"
                            }
                        }
                    }
                }
            }
        }
    }
}
