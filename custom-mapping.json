{
    "strict": {
        "text-heading-1-font-family": "Montserrat-SemiBold",
        "text-heading-2-font-family": "Montserrat-SemiBold",
        "text-heading-3-font-family": "Montserrat-SemiBold",
        "text-heading-4-font-family": "Montserrat-SemiBold",
        "text-heading-5-font-family": "Montserrat-SemiBold",
        "text-heading-6-font-family": "Montserrat-SemiBold",
        "text-subtitle-1-font-family": "Montserrat-Medium",
        "text-subtitle-2-font-family": "Montserrat-Medium",
        "text-paragraph-1-font-family": "Montserrat-Light",
        "text-paragraph-2-font-family": "Montserrat-Light",
        "text-caption-1-font-family": "Montserrat-SemiBold",
        "text-caption-2-font-family": "Montserrat-SemiBold",
        "text-label-font-family": "Montserrat-Medium",

        "text-heading-1-font-weight": 600,
        "text-heading-2-font-weight": 600,
        "text-heading-3-font-weight": 600,
        "text-heading-4-font-weight": 600,
        "text-heading-5-font-weight": 600,
        "text-heading-6-font-weight": 600,
        "text-subtitle-1-font-weight": 500,
        "text-subtitle-2-font-weight": 500,
        "text-paragraph-1-font-weight": 300,
        "text-paragraph-2-font-weight": 300,
        "text-caption-1-font-weight": 600,
        "text-caption-2-font-weight": 600,
        "text-label-font-weight": 500
    },
    "components": {
        "Select": {
            "appearances": {
                "default": {
                    "mapping": {
                        "textFontFamily": "Montserrat-Light"
                    }
                }
            }
        },
        "SelectOption": {
            "appearances": {
                "default": {
                    "mapping": {
                        "textFontFamily": "Montserrat-Light"
                    }
                }
            }
        },
        "Button": {
            "appearances": {
                "filled": {
                    "mapping": {
                        "textFontFamily": "Montserrat-Light"
                    },
                    "variantGroups": {
                        "size": {
                            "medium": {
                                "paddingHorizontal": 5,
                                "paddingVertical": 5
                            }
                        }
                    }
                },
                "ghost": {
                    "variantGroups": {
                        "status": {
                            "primary": {
                                "borderColor": "transparent",
                                "backgroundColor": "color-basic-transparent-200",
                                "textColor": "text-primary-color",
                                "iconTintColor": "text-primary-color",
                                "state": {
                                    "focused": {
                                        "borderColor": "color-basic-transparent-500",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "hover": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-200",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "active": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-primary-color",
                                        "iconTintColor": "text-primary-color"
                                    },
                                    "disabled": {
                                        "borderColor": "transparent",
                                        "backgroundColor": "color-basic-transparent-300",
                                        "textColor": "text-disabled-color",
                                        "iconTintColor": "text-disabled-color"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "Calendar": {
            "appearances": {
                "default": {
                    "mapping": {
                        "width": "100%",
                        "borderWidth": 0,
                        "borderColor": "background: rgba(0, 0, 0, 0)",
                        "headerPaddingHorizontal": 0,
                        "headerPaddingVertical": 15,
                        "paddingVertical": 0,
                        "rowMarginHorizontal": 0,
                        "titleFontSize": 15,
                        "titleFontWeight": "text-subtitle-1-font-weight",
                        "titleFontFamily": "text-subtitle-1-font-family"
                    }
                }
            }
        },
        "CalendarCell": {
            "appearances": {
                "default": {
                    "mapping": {
                        "state": {
                            "selected": {
                                "contentBorderColor": "color-success-500",
                                "contentTextColor": "text-primary-color",
                                "contentBackgroundColor": "color-success-200"
                            },
                            "today": {
                                "contentBorderColor": "color-success-500",
                                "contentBackgroundColor": "color-success-200",
                                "contentTextColor": "text-primary-color"
                            },
                            "range": {
                                "backgroundColor": "color-warning-500",
                                "contentTextColor": "color-secondary-500"
                            },
                            "today.range": {
                                "contentBorderColor": "color-success-500",
                                "contentBackgroundColor": "color-success-200",
                                "contentTextColor": "color-secondary-500"
                            }
                        }
                    }
                }
            }
        }
    }
}
